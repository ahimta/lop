{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "subcommand": "check",
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "Rust: cargo check - lop"
    },
    {
      "type": "cargo",
      "subcommand": "build",
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "Rust: cargo build - lop"
    },
    {
      "type": "cargo",
      "subcommand": "test",
      "problemMatcher": ["$rustc"],
      "group": "test",
      "label": "Rust: cargo test - lop"
    },
    {
      "type": "cargo",
      "subcommand": "run",
      "problemMatcher": ["$rustc"],
      "label": "Rust: cargo run - lop"
    },
    {
      "label": "Continuous Integration",
      "type": "process",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": { "cwd": "${workspaceRoot}" },
      "problemMatcher": ["$rustc"],
      "command": "./scripts/continuous-integration.sh"
    }
  ]
}
